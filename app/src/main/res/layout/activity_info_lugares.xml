<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lugaresPlantilla_layout"
    android:background="#FEFCFF"
    tools:context=".InfoLugares">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar2"
            android:elevation="4dp"
            android:background="@color/barra_nav"
            app:itemTextColor="#CFD7C7"
            app:title=" Participolis"
            android:fontFamily="casual"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Contenedor para la imagen principal -->
                <ImageView
                    android:id="@+id/imageView_main"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/lugar" />

                <!-- Título -->
                <TextView
                    android:id="@+id/textView_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/domine_bold"
                    android:text="Coliseo de Roma"
                    android:textAlignment="center"
                    android:textColor="@color/barra_nav"
                    android:textSize="24sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Contenedor para la descripción -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/Fondo"
                        android:elevation="4dp"
                        android:radius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#FEFCFF"
                            android:padding="16dp">

                            <!-- Descripción -->

                            <!-- Información General -->
                            <TextView
                                android:id="@+id/textView_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/chewy"
                                android:text="Historia...."
                                android:textColor="@color/barra_nav"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/textView_general_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/architects_daughter"
                                android:text="El Coliseo de Roma, antiguo anfiteatro inaugurado en el año 80 d.C., es un ícono de la arquitectura romana. Escenario de sangrientos combates de gladiadores y eventos públicos, su magnificencia y tamaño impresionan, reflejando la grandeza del Imperio Romano."
                                android:textColor="@color/barra_nav"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <!-- Contenedor para la información general -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Contenedor para la descripción -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/Fondo"
                        android:elevation="4dp"
                        android:radius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#FEFCFF"
                            android:padding="16dp">

                            <!-- Atracciones y Características -->
                            <TextView
                                android:id="@+id/textView_attractions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/chewy"
                                android:text="Atracciones y características del lugar..."
                                android:textColor="@color/barra_nav"
                                android:textSize="16sp" />

                            <!-- Historia y Contexto -->
                            <TextView
                                android:id="@+id/textView_history"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/architects_daughter"
                                android:textColor="@color/barra_nav"
                                android:text="
El Coliseo de Roma ofrece una experiencia fascinante para los visitantes, con sus imponentes ruinas que evocan la grandeza del pasado romano. Explorar sus niveles, pasillos y cámaras subterráneas revela la historia de los espectáculos y la ingeniería que lo hizo posible."
                                android:textSize="16sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Contenedor para la descripción -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/Fondo"
                        android:elevation="4dp"
                        android:radius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#FEFCFF"
                            android:padding="16dp">

                            <!-- Servicios y Facilidades -->
                            <TextView
                                android:id="@+id/textView_services"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/chewy"
                                android:text="Servicios y facilidades del lugar..."
                                android:textColor="@color/barra_nav"
                                android:textSize="16sp" />

                            <!-- Tarifas y Costos -->
                            <TextView
                                android:id="@+id/textView_prices"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/architects_daughter"
                                android:textColor="@color/barra_nav"
                                android:text="El Coliseo de Roma proporciona servicios como visitas guiadas, audioguías y acceso a áreas específicas. Además, cuenta con tiendas de recuerdos, áreas de descanso y baños. La ubicación central permite acceder fácilmente a restaurantes y transporte público en sus alrededores."
                                android:textSize="16sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Contenedor para la descripción -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/Fondo"
                        android:elevation="4dp"
                        android:radius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#FEFCFF"
                            android:padding="16dp">

                            <!-- Mapa -->
                            <TextView
                                android:id="@+id/textView_map"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/chewy"
                                android:text="Mapa del lugar..."
                                android:textColor="@color/barra_nav"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Contenedor para la descripción -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/Fondo"
                        android:elevation="4dp"
                        android:radius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#FEFCFF"
                            android:padding="16dp">

                            <!-- Información de Contacto -->
                            <TextView
                                android:id="@+id/textView_contact_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/chewy"
                                android:text="Información de contacto del lugar..."
                                android:textColor="@color/barra_nav"
                                android:textSize="16sp" />

                            <!-- Redes Sociales -->
                            <TextView
                                android:id="@+id/textView_social_media"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/chewy"
                                android:text="Redes sociales del lugar..."
                                android:textColor="@color/barra_nav"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Contenedor para la descripción -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="@color/Fondo"
                        android:elevation="4dp"
                        android:radius="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="#FEFCFF"
                            android:padding="16dp">

                            <!-- Enlaces Relevantes -->
                            <TextView
                                android:id="@+id/textView_links"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/chewy"
                                android:textColor="@color/barra_nav"
                                android:text="Enlaces relevantes..."
                                android:textSize="16sp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <!-- Otros contenedores para los demás apartados -->
                <!-- Puedes agregar más contenedores aquí para los otros apartados como atracciones, historia, servicios, etc. -->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>